<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/categoriesFragment">

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.agentrediska.hardwarestore.presentation.categoryfragment.CategoriesFragment"
        android:label="fragment_categories"
        tools:layout="@layout/fragment_categories" >
        <action
            android:id="@+id/action_categoriesFragment_to_preCategoriesFragment"
            app:destination="@id/preCategoriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/preCategoriesFragment"
        android:name="com.agentrediska.hardwarestore.presentation.precategoryfragment.PreCategoriesFragment"
        android:label="fragment_pre_categories"
        tools:layout="@layout/fragment_pre_categories" >
        <argument
            android:name="idCategory"
            app:argType="integer" />
        <argument
            android:name="nameCategory"
            app:argType="string" />
    </fragment>
</navigation>